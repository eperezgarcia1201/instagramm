!!! 5
%html
%head
	%title Instagramm
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body
	%nav.navbar.navbar-inverse{:role => "navigation"}
		.container
			.navbar-header
				%button.navbar-toggle{"data-target" => "#movil-nav", "data-toggle" => "collapse", :type => "button"}
					%span.sr-only Toggle navigation
					%span.icon-bar
					%span.icon-bar
					%span.icon-bar

				.navbar-brand= link_to "Instagramm", root_path
				#movil-nav.collapse.navbar-collapse
			- if user_signed_in?
				

				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Gram It", new_pic_path
					%li= link_to "Settings", edit_user_registration_path
					%li= link_to "Sign Out", destroy_user_session_path, method: :delete
				#bs-example-navbar-collapse-1.collapse.navbar-collapse

			- else
				%ul.nav.navbar-nav.navbar-right
					%li= link_to "Join", new_user_registration_path
					%li= link_to "Log In", new_user_session_path


	.container

	-flash.each do |name, msg|
		=content_tag :div, msg, class: "alert alert-info"

	= yield

